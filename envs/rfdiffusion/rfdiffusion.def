Bootstrap: docker
From: nvcr.io/nvidia/cuda:11.6.2-cudnn8-runtime-ubuntu20.04

%files
    # RFdiffusion will be mounted at runtime, not copied into image
    # This keeps the image smaller and allows updates without rebuild

%environment
    export DGLBACKEND="pytorch"
    export PYTHONPATH="/app/RFdiffusion:${PYTHONPATH}"
    export LC_ALL=C

%post
    # Install system dependencies
    apt-get -q update
    DEBIAN_FRONTEND=noninteractive apt-get install --no-install-recommends -y \
        git \
        python3.9 \
        python3-pip \
        wget \
        && python3.9 -m pip install -q -U --no-cache-dir pip \
        && rm -rf /var/lib/apt/lists/* \
        && apt-get autoremove -y \
        && apt-get clean

    # Create app directory
    mkdir -p /app/RFdiffusion

    # Install Python dependencies
    pip install -q --no-cache-dir \
        dgl==1.0.2+cu116 -f https://data.dgl.ai/wheels/cu116/repo.html \
        torch==1.12.1+cu116 --extra-index-url https://download.pytorch.org/whl/cu116 \
        e3nn==0.3.3 \
        wandb==0.12.0 \
        pynvml==11.0.0 \
        git+https://github.com/NVIDIA/dllogger#egg=dllogger \
        decorator==5.1.0 \
        hydra-core==1.3.2 \
        pyrsistent==0.19.3

    # Note: SE3Transformer and RFdiffusion packages will be installed
    # at runtime when RFdiffusion directory is mounted (see run_singularity.sh)

%runscript
    # Default runscript - can be overridden
    exec python3.9 "$@"

%labels
    Author PETase Lab
    Version 1.1.0
    Description RFdiffusion container for protein structure generation

